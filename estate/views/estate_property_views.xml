<?xml version="1.0"?>
<odoo>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate_property.search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="facades"/>
                <field name="living_area"/>
                <separator/>
                <filter string="Available"
                        name="date_availability"
                        domain="[('date_availability', '&lt;', datetime.date.today())]"/>

                <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode"
                                context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate_property.tree</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <tree string="My properties list">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate_property.form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Create a new record">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                        <group>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">First UI for model</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="test_menu_root" name="Test">
        <menuitem id="test_first_level_menu" name="First Level">
            <menuitem id="test_model_menu_action" action="test_model_action"/>
        </menuitem>
    </menuitem>
</odoo>